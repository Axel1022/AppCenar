<div class="text-center mb-4">
  <img
    src="/assets/img/iconFoodRush - copia.png"
    width="100"
    height="50"
    alt="Icon App Cenar"
  />
  <h1 class="h3 mb-3 font-weight-normal">Registrarse</h1>
</div>
<form enctype="multipart/form-data" class="needs-validation" novalidate>

  <div class="form-group mb-3">
    <label for="nombre">Nombre</label>
    <input
      type="text"
      class="form-control"
      name="name"
      id="nombre"
      placeholder="Ingresa tu nombre"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a name.</div>
  </div>

  <div class="form-group mb-3">
    <label for="nombre">Telefono</label>
    <input
      type="text"
      class="form-control"
      name="phone"
      id="nombre"
      placeholder="Ingresa tu numero de telefono"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a phone.</div>
  </div>

  <div class="form-group mb-3">
    <label for="email">Correo Electrónico</label>
    <input
      type="email"
      class="form-control"
      name="email"
      id="email"
      placeholder="Ingresa tu correo"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter an email.</div>
  </div>

 <div class="form-group mb-3">
    <label for="nombre">Logo</label>
    <input
      type="file"
      name="image"
      class="form-control"
      id="nombre"
      placeholder="Ingresa tu foto de perfil"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a file.</div>
  </div>


  <div class="form-group mb-3">
    <label for="nombre">Horario de apertura</label>
    <input
      type="text"
      class="form-control"
      name="openTime"
      id="nombre"
      placeholder="Ingresa el horario de apertura"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a opening time.</div>
  </div>


  <div class="form-group mb-3">
    <label for="nombre">Horario de cierre</label>
    <input
      type="text"
      class="form-control"
      name="closeTime"
      id="nombre"
      placeholder="Ingresa el horario de cierre"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a closing time.</div>
  </div>

  <div class="form-group mb-3">
    <label for="nombre">Tipo de comercio</label>
    <input
      type="text"
      class="form-control"
      name="typeTrade"
      id="nombre"
      placeholder="Ingresa el tipo de comercio"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a trade.</div>
  </div>

 <div class="form-group mb-3">
    <label for="rol">Rol</label>
    <select class="form-control" id="rol" name="role" required>
      <option value="">Selecciona tu rol</option>
      <option value="comercio">Comercio</option>
    </select>
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please select a role.</div>
 </div>

  <div class="form-group mb-3">
    <label for="password">Contraseña</label>
    <input
      type="password"
      class="form-control"
      id="password"
      placeholder="Crea una contraseña"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a password.</div>
  </div>

  <div class="form-group mb-3">
    <label for="password">Confirmar contraseña</label>
    <input
      type="password"
      class="form-control"
      name="confirmPassword"
      id="password"
      placeholder="Confirmar contraseña"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter an password again.</div>
  </div>

  <button type="submit" class="btn btn-primary btn-block mt-4">Registrarse</button>
</form>
<div class="text-center mt-3">
  <p>¿Ya tienes una cuenta? <a href="/login">Inicia Sesión</a></p>
</div>
