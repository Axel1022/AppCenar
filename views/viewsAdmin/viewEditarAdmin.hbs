<div class="text-center mb-4">
  <img
    src="/assets/img/iconFoodRush - copia.png"
    width="100"
    height="50"
    alt="Icon App Cenar"
  />
  <h1 class="h3 mb-3 font-weight-normal">Editar Adminstrador</h1>
</div>
<form
  enctype="multipart/form-data"
  class="needs-validation"
  method="POST"
  action="/editarAdminPost"
  novalidate
>

  <div class="form-group mb-3">
    <label for="nombre">Nombre</label>
    <input
      type="text"
      class="form-control"
      name="name"
      id="nombre"
      value="{{Admin.name}}"
      placeholder="Ingresa tu nombre"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a name.</div>
  </div>

  <div class="form-group mb-3">
    <label for="nombre">Apellido</label>
    <input
      type="text"
      class="form-control"
      name="lastName"
      id="nombre"
      placeholder="Ingresa tu apellido"
      value="{{Admin.lastName}}"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a last name.</div>
  </div>

  <div class="form-group mb-3">
    <label for="nombre">Cedula</label>
    <input
      type="text"
      class="form-control"
      name="identification"
      id="nombre"
      value="{{Admin.identification}}"
      placeholder="Ingresa tu cedula de identidad"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter your ID.</div>
  </div>

  <div class="form-group mb-3">
    <label for="email">Correo Electrónico</label>
    <input
      type="email"
      class="form-control"
      name="email"
      id="email"
      value="{{Admin.email}}"
      placeholder="Ingresa tu correo"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter an email.</div>
  </div>

  <div class="form-group mb-3">
    <label for="nombre">Nombre de Usuario</label>
    <input
      type="text"
      class="form-control"
      name="user"
      id="nombre"
      value="{{Admin.user}}"
      placeholder="Ingresa tu nombre de usuario"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a user.</div>
  </div>

  <div class="form-group mb-3">
    <label for="password">Contraseña</label>
    <input
      type="password"
      class="form-control"
      name="password"
      id="password"
      placeholder="Crea una contraseña"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter a password.</div>
  </div>

  <div class="form-group mb-3">
    <label for="password">Confirmar contraseña</label>
    <input
      type="password"
      class="form-control"
      name="confirmPassword"
      id="password"
      placeholder="Confirmar contraseña"
      required
    />
    <div class="valid-feedback">Good!</div>
    <div class="invalid-feedback">Please enter an password again.</div>
  </div>
   <input
      type="hidden"
      name="adminId"
      value="{{Admin.id}}"

    />

  <button
    type="submit"
    class="btn btn-primary btn-block mt-4"
  >Editar</button>
</form>

