<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{pageTitle}}</title>
    <link rel="icon" href="/assets/img/iconFoodRush.png" type="image/x-icon" />
    <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css" />
  </head>

  <body class="d-flex flex-column min-vh-100">
    <main class="flex-grow-1 d-flex align-items-center justify-content-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="card mt-4">
              <div class="card-body">
              {{#if hasErrorMessages}} 

              <div class="alert alert-danger alert-dismissible fade show " role="alert">
                  <ul>
                    {{#each errorMessages}}
                      <li>{{this}}</li>
                    {{/each}}
                  </ul>  
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>   
              
              {{/if}}
              {{{body}}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="py-3 mt-4 bg-light">
      <div class="container">
        <p class="text-center mb-0">&copy; 2024 FoodRush. Todos los derechos
          reservados.
          <a
            href="https://www.flaticon.es/iconos-gratis/instalacion"
            title="instalación iconos"
          >Instalación iconos creados por Freepik - Flaticon</a>
        </p>
      </div>
    </footer>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/assets/js/bootstrap/bootstrap.min.js"></script>

    <script>
    (function () {
      'use strict'
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
    })()
    </script>
  </body>

</html>
