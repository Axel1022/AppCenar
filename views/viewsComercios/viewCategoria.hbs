<div class="row">
    <div class="col-md-4">
      <a href="/viewComercio/viewAddCategoria" class="btn btn-primary mt-3 mb-3 btn-add"> + Agregar Categoria</a>

        <div class="card p-3 mb-2">

            {{#if hasCategoria}}
            {{#each categorias}}
            <div class="d-flex justify-content-between">

                <div class="d-flex flex-row align-items-center">
                    <div class="icon-categoria">
                        <img src="/assets/img/icons8-cubiertos-64.png"  class="img-categoria-icon">
                    </div>
                    <div class="ms-2 c-details">
                      <h3 class="mb-0">{{name}}</h3>
                  </div>
                  <div class="badge"> <span>Categoria</span></div>
                </div>
            </div>
            <div class="mt-5">
                <h4 class="heading">{{description}}</h4>
                <div class="mt-5">

                 <div class="mt-3"> <span class="text1">{{quantity}} <span class="text2">Categorias creadas</span></span> </div>
                 
                </div>
            </div>

            <a href="#" class="btn btn-primary float-end me-3 mt-3 btn-edit">Edit</a>
            <a href="#" class="btn btn-primary float-end me-3 mt-3 btn-delete">Delete</a>

            {{/each}}
        </div>

        {{else}}
         <h2>No hay categorias creadas</h2>
        {{/if}}
    </div>
</div>