<div class="btn-add-prod mb-3">
    <a href="/comercios/AgregarCategoria" class="btn btn-add">+ Agregar Categoria</a>
</div>

<div class="row card-container-cat">
    {{#if hasCategoria}}
    {{#each categorias}}
    <div class="col-md-4 mb-4">
        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex flex-row align-items-center">
                    <div class="icon-categoria">
                        <img src="/assets/img/icons8-cubiertos-64.png" class="img-categoria-icon">
                    </div>
                    <div class="ms-2 c-details">
                        <h3 class="mb-0">{{name}}</h3>
                        <div class="badge"><span>Categoria</span></div>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <h6 class="heading">{{description}}</h6>
                <div class="mt-5">
                    <div class="mt-3">
                        <span class="text1">{{quantity}} <span class="text2">Productos creados</span></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a href="/comercios/EditarCategoria/{{id}}" class="btn  me-2 btn-edit">Edit</a>
                <a href="/comercios/EliminarCategoria/{{id}}" class="btn  btn-delete">Delete</a>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <h2>No hay categorias creadas</h2>
    {{/if}}
</div>
