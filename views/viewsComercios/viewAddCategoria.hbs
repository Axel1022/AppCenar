<div class="col-12 col-sm-6 offset-3 d-flex align-items-center justify-content-center">
    <form action="/viewCategoria/{{#if editMode}}viewEditCategoria{{else}}viewAddCategoria{{/if}}" method="post" class="needs-validation" enctype="multipart/form-data" novalidate> 
      
      <h3>Agregar Categoria</h3>
       {{#if editMode}}
         <input type="hidden" value="{{categoria.id}}" name="id">
       {{/if}}
       
        <div class="form-group mt-3">
            <label for="name">Nombre:</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="{{#if editMode}}{{categoria.name}}{{/if}}" required>
        </div>
        <div class="form-group mt-3">
            <label for="description">Descripcion:</label><br>
            <textarea id="description" name="description" rows="4" cols="55">{{#if editMode}}{{categoria.description}}{{/if}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary float-end mt-3 btn-save">Guardar</button>
        <a href="#" class="btn btn-primary float-end me-3 mt-3 btn-home">Home</a>
   </form>
</div>

  