<div class="row">
    <div class="col-12">
        <h1>Confirmar eliminacion</h1>
        <p>Estas seguro de eliminar {{productos.name}}?</p>

        <form method="post" action="/comercios/EliminarProducto" class="form-delete">
            <input type="hidden" name="id" value="{{productos.id}}">
            <button type="submit" class="btn btn-delete">Delete</button>
            <a href="/comercios/Productos" class="btn btn-cancel">Cancel</a>
        </form>
    </div>
</div>