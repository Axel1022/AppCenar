<link rel="stylesheet" href="../../assets/css/style/favorito.css">

<div class="container my-4">
  <!-- Lista de Tienda -->
  {{#if has}}
    <ul class="list-unstyled">
      <ul class="list-unstyled">
     <form class="d-flex mb-4" action="/buscarComercio" method="post">
        <input
          type="text"
          class="form-control me-2"
          placeholder="Buscar..."
          aria-label="Buscar"
          name="buscar"
        />
        <button type="submit" class="btn btn-search">Buscar</button>
      </form>
      <h6 class="mb-4">{{Cantidad}} Tiendas</h6>
      {{#each Cafeterias}}
        <li class="mb-3">
          <a
            href="/comercios/pedido/realizar/{{this.id}}"
            class="text-decoration-none d-flex align-items-center p-3 border rounded shadow-sm"
          >
            <img
              src="{{this.logo}}"
              alt="{{this.name}}"
              class="img-fluid me-3"
              style="width: 100px; height: auto;"
            />
            <p class="mb-0">{{this.name}}</p>
            {{! Le falta el corazon para ponerlo de favorito }}
           {{#if this.isFavorito}}
            <div class="container-buttons-favorito" >
								<form action="/cliente/AgregarFavorito" class="mt-3" method="post">
                    <input type="hidden" name="idComercio" value="{{this.id}}">
                    <button class="btnFavorite">
                        <img src="../../assets/img/favorito.png" alt="icon de Favorito" height="15px" width="15px">
                        <p>Agregar a favorito</p>
                    </button>
                </form>
						</div>
           {{/if}}
            {{! Le falta el corazon para ponerlo de favorito }}
          </a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <h2>No hay Cafeterias disponibles</h2>

  {{/if}}
  <div class="text-center mt-4">
    <a href="/cliente/home" class="btn btn-back">
Volver
</a>
  </div>
</div>
