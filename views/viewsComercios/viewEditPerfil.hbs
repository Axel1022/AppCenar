<div class="container">
  <div class="card">
    <div class="card-header text-center">
      <h2>Business Form</h2>
    </div>
    <form
      class="needs-validation"
      method="POST"
      action="/comercios/perfil/editar/post"
      novalidate
    >
      <div class="card-body">
        <div class="form-group mb-3">
          <label for="nombre">Nombre</label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="nombre"
            value="{{comercio.name}}"
            required
          />
          <div class="invalid-feedback">Please enter a name.</div>
        </div>

        <div class="form-group mb-3">
          <label for="telefono">Telefono</label>
          <input
            type="tel"
            class="form-control"
            name="phone"
            id="telefono"
            value="{{comercio.phone}}"
            pattern="[0-9]{10}"
            title="Must contain 10 numeric digits"
            required
          />
          <div class="invalid-feedback">Please enter a valid phone number with 10 digits.</div>
        </div>

        <div class="form-group mb-3">
          <label for="email">Correo Electronico</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            value="{{comercio.email}}"
            required
          />
          <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>

        <div class="form-group mb-3">
          <label for="image">Logo</label>
          <input
            type="file"
            name="image"
            class="form-control"
            id="image"
            required
          />
          <div class="invalid-feedback">Please upload a logo (optional).</div>
        </div>

        <div class="form-group mb-3">
          <label for="openTime">Horario de Apertura</label>
          <input
            type="text"
            class="form-control"
            name="openTime"
            id="openTime"
            value="{{comercio.openTime}}"
            required
          />
          <div class="invalid-feedback">Please enter the opening hours.</div>
        </div>

        <div class="form-group mb-3">
          <label for="closeTime">Horario de Cierre</label>
          <input
            type="text"
            class="form-control"
            name="closeTime"
            id="closeTime"
            value="{{comercio.closeTime}}"
            required
          />
          <div class="invalid-feedback">Please enter the closing hours.</div>
        </div>

        <div class="form-group mb-3">
          <label for="category">Categorias</label>
          <select class="form-control" id="category" name="typeTrade" required>
            <option value="">Select your category</option>
            <option value="Restaurante" {{#if (compare comercio.typeTrade "Restaurante")}}selected{{/if}}>Restaurant</option>
            <option value="Mercado" {{#if (compare comercio.typeTrade "Mercado")}}selected{{/if}}>Market</option>
            <option value="Drink" {{#if (compare comercio.typeTrade "Drink")}}selected{{/if}}>Drink</option>
            <option value="Cafeteria" {{#if (compare comercio.typeTrade "Cafeteria")}}selected{{/if}}>Cafeteria</option>
            <option value="Tienda" {{#if (compare comercio.typeTrade "Tienda")}}selected{{/if}}>Store</option>
            <option value="Salud" {{#if (compare comercio.typeTrade "Salud")}}selected{{/if}}>Health</option>
          </select>
          <div class="invalid-feedback">Please select a category.</div>
        </div>

        <div class="form-group mb-3">
          <label for="role">Rol</label>
          <input
            type="text"
            class="form-control"
            name="role"
            id="role"
            value="{{comercio.role}}"
            required
          />
          <div class="invalid-feedback">Please enter the role.</div>
        </div>
      </div>

      <div class="card-footer d-flex justify-content-between">
        <a
          type="button"
          class="btn btn-secondary"
          onclick="window.history.back();"
        >Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
