{{#if hasPedidos}}
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Tus pedidos</h1>
    <ul class="list-group">
      {{#each Pedidos as |pedido|}}
        <li class="list-group-item mb-3">
          <a href="/cliente/pedidos/detalle/{{pedido.id}}" class="text-decoration-none text-dark">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title m-0">{{pedido.date}} - {{pedido.hour}}</h3>
                <img
                  src="{{pedido.comercio}}"
                  class="img-fluid"
                  alt="Logo de Comercio"
                  style="max-width: 50px;"
                />
              </div>
              <div class="card-body">
                <h4 class="mt-3">{{pedido.status}}</h4>
                <h5>{{Comercio.name}}</h5>
                <p class="card-text">RD$ {{pedido.total}} - Cantidad de productos: {{pedido.cantidadProductos}}</p>
              </div>
            </div>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="container mt-5">
    <h2 class="text-center">Usted no ha realizado ning√∫n pedido!</h2>
  </div>
{{/if}}
