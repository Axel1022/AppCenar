{{#if hasPedidos}}
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Tus pedidos</h1>
    <ul class="list-group">
      {{#each Pedidos as |pedido|}}
        <li class="list-group-item mb-3 p-0">
          <a href="/cliente/pedidos/detalle/{{pedido.id}}" class="text-decoration-none">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                <h3 class="card-title m-0">{{pedido.date}} - {{pedido.hour}}</h3>
                <img
                  src="{{pedido.comercio}}"
                  class="img-fluid rounded-circle"
                  alt="Logo de Comercio"
                  style="max-width: 50px;"
                />
              </div>
              <div class="card-body">
                <h4 class="mt-3 {{statusClass pedido.status}}">
                  {{pedido.status}}
                </h4>
                <h5 class="text-muted">{{Comercio.name}}</h5>
                <p class="card-text">RD$ {{test}} - Cantidad de productos: {{pedido.cantidadProductos}}</p>
              </div>
            </div>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="container mt-5">
    <h2 class="text-center text-secondary">¡Usted no ha realizado ningún pedido!</h2>
  </div>
{{/if}}
