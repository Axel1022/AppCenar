<div class="container">
  <div class="card">
    <div class="card-header text-center">
      <h2>Formulario de Direciones</h2>
    </div>
    <form
      class="needs-validation"
      method="POST"
      action="/cliente/direcciones/editar/post"
    >
      <div class="card-body">
        <div class="form-group mb-3">
          <label for="nombre">Lugar</label>
          <input
            type="text"
            class="form-control"
            name="lugar"
            value="{{Direccion.identifier}}"
            id="lugar"
            placeholder="Ejemplo: Oficina"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="lastName">Dirección</label>
          <input
            type="text"
            class="form-control"
            name="direccion"
            value="{{Direccion.direction}}"
            id="direccion"
            placeholder="Coloque aqui la dirección"
            required
          />
        </div>
      </div>
      <input type="hidden" value="{{Direccion.id}}" name="elemetnId" />

      <div class="card-footer d-flex justify-content-between">
        <a
          type="button"
          class="btn btn-secondary"
          onclick="window.history.back();"
        >Cancelar</a>
        <button type="submit" class="btn btn-primary">Editar</button>
      </div>
    </form>
  </div>
</div>
