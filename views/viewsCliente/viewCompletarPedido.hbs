<div class="container my-5">
  <div class="row">
    <div class="col-12">
    </div>
    <div class="col-md-8">
      {{#if hasDire}}
        <h1>Direcciones: </h1>
        <div class="row">
          <div class="col-md-12 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <form method="post" action="/cliente/confirmarpedido">
                  <input
                    type="hidden"
                    value="{{Comercio.id}}"
                    name="comercioID"
                  />
                  {{#each Direcciones}}
                    <input
                      type="radio"
                      name="radioDire"
                      value="{{this.id}} "
                      checked
                    />
                    <label><strong>{{this.identifier}}</strong></label>
                    <label>{{this.direction}}</label><br />
                  {{/each}}
                  <button
                    type="submit"
                    class="btn btn-primary d-flex justify-content-between"
                  >
                    Pedir
                  </button>
                </form>

              </div>
            </div>
          </div>
        </div>
      {{else}}
        <h1>No tienes direcciones</h1>
      {{/if}}
    </div>
    <div class="col-md-4">
      <h2 class="p-1">Orden:</h2>
      <div class="card mb-4 shadow-sm" id="orderList">
        <div class="card-body">
          {{#if has}}
            {{!-- <img src="{{Comercio.logo}}" alt="imagen de {{logoComercio}} " /> --}}
            <h2>{{Comercio.name}}</h2>
            <li
              class="list-group-item d-flex justify-content-between align-items-center m-2"
            >
              <strong>Subtotal:</strong>
              <span>RD$ {{test}}</span>
            </li>
            <li
              class="list-group-item d-flex justify-content-between align-items-center m-2"
            >
              <strong>ITBIS:</strong>
              <span>{{Itbis}}%</span>
            </li>
            <li
              class="list-group-item d-flex justify-content-between align-items-center m-2"
            >
              <strong>Total:</strong>
              <span>RD$ {{testTotal}}</span>
            </li>
            <li
              class="list-group-item d-flex justify-content-between align-items-center m-2"
            >
              <a
                href="/cliente/home"
                class="btn btn-secondary d-flex justify-content-between"
              >
                Cancelar
              </a>
              <a
                href="javascript:void(0);"
                onclick="window.history.back();"
                class="btn btn-secondary d-flex justify-content-between"
              >
                Atras
              </a>
            </li>
          {{else}}
            <p class="card-text">Usted no ha seleccionado ning√∫n pedido.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
