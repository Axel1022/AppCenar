{{#if has}}
  <div class="container mt-5">
    <h1 class="text-center mb-">Mis Favoritos</h1>
    <ul class="list-group p-3">
      {{#each Comercios as |comercio|}}
        <a  href="/comercios/pedido/realizar/{{this.id}}">
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <div class="d-flex align-items-center">
              <img
                src="{{comercio.logo}}"
                class="img-thumbnail mr-3"
                alt="imagen de {{comercio.name}}"
                style="width: 50px; height: 50px;"
              />
              <span>{{comercio.name}}</span>
            </div>
            <form method="post" action="/cliente/comercios/eliminar">
              <input type="hidden" name="id" value="{{comercio.idfavorito}}" />
              <button type="submit" class="btn btn-danger">Remover</button>
            </form>
          </li>
        </a>
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="container mt-5">
    <h2 class="text-center">Usted no ha agregado ninguno a favorito</h2>
  </div>
{{/if}}
